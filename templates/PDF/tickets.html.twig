{% extends 'base.html.twig' %}

{% block title %}Tiiix | {{ event.name }}
{% endblock %}

{% block stylesheets %}
	<link rel="icon" href="{{ app.request.getSchemeAndHttpHost() }}{{ asset('build/logos/tiiix.png') }}"/>

	<style type="text/css">

		body {
			font-family: DejaVu Sans;
		}

		.photo {
            width: 60px;
            height: 60px;
		}

        .table {
            border-top: 1px solid #d3d3d3;
            padding: 10px;
            margin: 5px;
        }

        h4 {
            font-size: 18px;
            Font-weight: bold;
            color: white;
            background-color: #0a1c3c;
            border-bottom-right-radius: 50%;
            padding: 10px 5px;
            text-transform: capitalize;
        }

        .date {
            font-size: 16px;
        }

        .number: {
            font-size: 60px;
        }

        .qr-code {
            width: 100px;
            height: 100px;
            margin-top: 10px;
		}

        tr, td: {
            padding: 5px;
        }

	</style>
{% endblock %}

{% block body %}
    <div class="text-center">
	    <img class="photo" src="{{ app.request.getSchemeAndHttpHost() }}{{ asset('build/logos/tiiix.png') }}" alt="image-titre">
    </div>
    {% for ticket in tickets %}
        <div class="top-line"></div>
        <table class="table">
            <tr>
                <td>
                    <h4>{{ event.name }}</h4>
                    <p class="date">{{ event.startDate|date('d/m/Y') }}</p>
                    <p class="number">{{ ticket.number }}</p>
                </td>
                <td>
                    <div class="text-end">
                        {% if ticket.qrCode %}
                            <img src="{{ app.request.getSchemeAndHttpHost() }}{{ asset('qrCodes') }}/{{ ticket.qrCode }}" class="qr-code">
                        {% else %}
                            <img src="{{ app.request.getSchemeAndHttpHost() }}{{ asset('build/logos/tiiix.png') }}" class="qr-code">
                        {% endif %}
                    </div>
                </td>
            </tr>
        </table>
        <div class="text-center">
            <small>www.tiiix.fr</small>
        </div>
    {% endfor %}
{% endblock %}
