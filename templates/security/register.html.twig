{% extends 'layout.html.twig' %}

{% block title %}Créer mon comte
{% endblock %}

{% block body %}
	<div class="login">
		<div class="container row justify-content-center">
			<div class="login-form col-12 col-md-8">
				<h3>Créer mon comte</h3>
				{{ form_start(registrationForm) }}
				{{ form_errors(registrationForm) }}

				<div class="row justify-content-center">
					<div class="col-12 col-md-8">
						{{ form_widget(registrationForm.lastname) }}
						{{ form_widget(registrationForm.firstname) }}
						{{ form_widget(registrationForm.email) }}
						{{ form_widget(registrationForm.password) }}
						<div class="mb-3">
							<input type="checkbox" id="cgv" name="cgv" required>
							<label for="cgv">J'ai lu et j'accepte les <a href="{{ path('app_legal') }}" target="_blank">conditions générales d'utilisation</a>.</label>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

						<button type="submit" class="btn btn-danger">Valider</button>
                        <div class="mt-3">
                            <p><b>Déjà inscrit ? </b><a href="{{ path('app_login') }}" class="text-decoration-none">J'accède à mon compte</a></p>
                        </div>
					</div>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>

	</div>
{% endblock %}
