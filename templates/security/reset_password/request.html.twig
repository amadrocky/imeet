{% extends 'layout.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
	<div class="login">
        <div class="container row justify-content-center">
            <div class="login-form col-12 col-md-8">
                <h3>Reinitialiser mon mot de passe</h3>
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        {{ form_start(requestForm) }}
                            {{ form_row(requestForm.email) }}
                            <div class="mb-3">
                                <small>
                                    Entrez votre adresse email, un lien vous sera envoyé afin de procéder à la réinitialisation de votre mot de passe.
                                </small>
                            </div>

                            <button class="btn btn-danger">Envoyer</button>
                            <div class="mt-3">
                                <a href="{{ path('app_login') }}">Déjà inscrit ? J'accède à mon compte</a>
                            </div>
                        {{ form_end(requestForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
