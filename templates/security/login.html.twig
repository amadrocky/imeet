{% extends 'layout.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="login">
        <div class="container row justify-content-center">
            <div class="login-form col-12 col-md-8">
                <h3>Connexion</h3>
                <div class="row justify-content-center">
					<div class="col-12 col-md-8">
                        {% if error %}
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endif %}
                        {{ form_start(form, {'action': path('app_login'), 'method': 'POST'}) }}
                            {{ form_errors(form) }}
                            <div>
                                {{ form_widget(form.email, {'attr': {'value': last_username}}) }}
                                {# <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" required> #}
                            </div>
                            
                            <div>
                                {{ form_widget(form.password) }}
                                {# <input type="password" id="password" name="_password" placeholder="Mot de passe" required> #}
                            </div>

                            {# If you want to control the URL the user is redirected to on success
                                    <input type="hidden" name="_target_path" value="/account"> #}

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <button type="submit" class="btn btn-danger">Connexion</button>
                            <a href="{{ path('app_register') }}" class="btn btn-outline-danger">Pas encore inscrit ? Créer mon compte</a>
                            <div class="mt-3">
                                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">Mot de passe oublié ?</a>
                            </div>
                        </form>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
		
    </div>
{% endblock %}
