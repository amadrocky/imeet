{% extends 'base.html.twig' %}

{% block header %}
	<nav class="navbar navbar-light bg-light navbar-expand-lg fixed-top">
		<div class="container-fluid">
			<img src="{{ asset('build/logos/imeet.png') }}" class="nav-logo" alt="image"/>
			<a class="navbar-brand" href="{{ path('app_home') }}">tiiix</a>
			<div class="collapse navbar-collapse">
				<ul class="navbar-nav ms-auto">
					<li class="nav-item">
						<a class="btn btn-outline-danger" aria-current="page" href="{{ path('app_product_index') }}">
							Nos produits
						</a>
					</li>
					<li class="nav-item">
						{% if app.user %}
							<a class="btn btn-danger" href="{{ path('app_user_dashboard') }}">
								{{ app.user.fullName }}
							</a>
						{% else %}
							<a class="btn btn-danger" href="{{ path('app_login') }}">
								Se connecter
							</a>
						{% endif %}
					</li>
				</ul>
			</div>
		</div>
	</nav>
{% endblock %}

{% block footer %}
	{% include './footer.html.twig' %}
{% endblock %}
