<div class="card" style="width: 18rem;">
  <div class="card-top">
    <span>{{ product.name }}</span>
  </div>
  <div class="card-body">
    <h5 class="card-title">
      {{ (product.price / 100)|round(0, 'floor') }}<sup>â‚¬{{ product.price|slice(-2) }}</sup>
    </h5>
    <ul class="product-details">
      <li><i class="fas fa-circle text-danger"></i> {{ product.quantity }} tickets</li>
        {% for composition in compositions %}
          <li><i class="fas fa-circle {% if composition in product.compositions %}text-danger{% endif %}"></i> {{ composition.name }}</li>
        {% endfor %}
    </ul>
    <div class="w-100 text-center">
      <a href="{{ path('app_order_recap', {'slug': product.slug}) }}" class="btn btn-danger btn-lg">Commander</a>
      <div class="mt-2">
        <a href="{{ path('app_product_show', {'slug': product.slug}) }}" class="text-danger text-decoration-none card-link">En savoir plus</a>
      </div>
    </div>
  </div>
</div>
